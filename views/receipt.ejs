<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receipt - ID <%= receiptData.id %></title>
    <link rel="stylesheet" href="/receipt.css">
    <%
        // Helper function to calculate age from DOB (YYYY-MM-DD)
        function calculateAge(dobString) {
            if (!dobString || !/^\d{4}-\d{2}-\d{2}$/.test(dobString)) return null;
            try {
                const birthDate = new Date(dobString + "T00:00:00Z");
                const today = new Date();
                let age = today.getUTCFullYear() - birthDate.getUTCFullYear();
                const m = today.getUTCMonth() - birthDate.getUTCMonth();
                if (m < 0 || (m === 0 && today.getUTCDate() < birthDate.getUTCDate())) {
                    age--;
                }
                return age >= 0 ? age : null;
            } catch (e) {
                return null;
            }
        }
    %>
</head>

<body>
    <div class="print-container">
        <!-- Header -->
        <header class="header-section">
            <img src="/logo.png" alt="Logo" class="logo" onerror="this.style.display='none'">
            <p class="tagline">Dedicated To Care, Committed To Service</p>
            <div class="shop-name">TREAT & CURE</div>
            <div class="document-title">Money Receipt</div>
        </header>
        
        <!-- Meta Info -->
        <div class="meta-info">
            <div class="branch-details">
                <h3><%= branchDetails.name %></h3>
                <p>Ph: <%= branchDetails.phone %></p>
                <p style="white-space: pre-line;"><%= branchDetails.address %></p>
            </div>
            <div class="date-details">
                <p><strong>DATE & TIME:</strong> <%= receiptData.displayReceiptDate %></p>
                <p><strong>Receipt ID:</strong> RCPT-<%= String(receiptData.id).padStart(6, '0') %></p>
            </div>
        </div>

        <!-- Customer Details -->
        <div class="customer-details-grid">
            <div><strong>CUSTOMER ID:</strong> CUST-<%= String(customerDetails.id).padStart(10, '0') %></div>
            <div><strong>MOBILE NO:</strong> <%= customerDetails.mobile || 'N/A' %></div>
            <div><strong>NAME:</strong> <%= customerDetails.name %></div>
            <div>
                <strong>AGE/DOB:</strong>
                <%
                    let ageDisplayValue = null;
                    if (customerDetails.age !== null && customerDetails.age !== undefined) {
                        ageDisplayValue = `${customerDetails.age} yrs (Provided)`;
                    } else {
                        const calculatedAge = calculateAge(customerDetails.dob);
                        if (calculatedAge !== null) {
                            ageDisplayValue = `${calculatedAge} yrs (Calculated)`;
                        }
                    }
                    let dobDisplayValue = customerDetails.displayDob && customerDetails.displayDob !== 'N/A' ? customerDetails.displayDob : null;
                    let ageDobOutputReceipt = [ageDisplayValue, dobDisplayValue].filter(Boolean).join(' / ') || 'N/A';
                %>
                <%- ageDobOutputReceipt %>
            </div>
            <div><strong>GENDER:</strong> <%= customerDetails.gender || 'N/A' %></div>
            <div><strong>REFERRED BY DR.:</strong> <%= receiptData.referred_by || 'N/A' %></div>
        </div>

        <!-- Items Table -->
        <table class="items-table">
            <thead>
                <tr>
                    <th style="width: 60%;">TEST / PACKAGE NAME</th>
                    <th style="width: 20%;" class="amount-col">ITEM DISC %</th>
                    <th style="width: 20%;" class="amount-col">MRP (₹)</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.package_name %></td>
                        <td class="amount-col"><%= item.discountPercentageFormatted %>%</td>
                        <td class="amount-col"><%= item.mrpFormatted %></td>
                    </tr>
                <% }) %>
                <% const minRowsReceipt = 3; %>
                <% if (items.length < minRowsReceipt) { %>
                    <% for(let i = 0; i < (minRowsReceipt - items.length); i++) { %>
                        <tr class="placeholder-row">
                            <td colspan="3"> </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>

        <!-- Totals Table -->
        <table class="totals-table">
            <tbody>
                <tr>
                    <td class="label-col" style="width: 40%; vertical-align: top;">
                        NO OF TESTS: <%= receiptData.num_tests || items.length %><br>
                        TESTS CONDUCTED AT: <%= receiptData.conducted_at || 'N/A' %><br>
                        Payment: <%= receiptData.payment_method || 'N/A' %>
                    </td>
                    <td style="width: 20%; text-align: center; vertical-align: middle; border-left: 1px solid #e0e0e0; border-right: 1px solid #e0e0e0;">
                        <% if (typeof labLogoPath !== 'undefined' && labLogoPath) { %>
                            <img src="<%= labLogoPath %>" alt="Lab Logo" style="max-height: 60px; max-width: 120px;">
                        <% } %>
                    </td>
                    <td class="label-col highlight" style="width: 20%; vertical-align: top; text-align: right;">
                        TOTAL MRP<br>
                        SUBTOTAL<br>
                        OVERALL DISC (<%= receiptData.overallDiscountPercentageFormatted %>%)<br>
                        <strong style="font-size: 1.1em;">NET PAYABLE</strong><br>
                        RECEIVED<br>
                        <strong style="font-size: 1.1em;">DUE</strong>
                    </td>
                    <td class="value-col highlight" style="width: 20%; vertical-align: top;">
                        ₹<%= receiptData.totalMrpFormatted %><br>
                        ₹<%= receiptData.subtotalAfterItemDiscountsFormatted %><br>
                        (-) ₹<%= receiptData.overallDiscountAmountFormatted %><br>
                        <strong style="font-size: 1.1em;">₹<%= receiptData.finalAmountFormatted %></strong><br>
                        ₹<%= receiptData.amountReceivedFormatted %><br>
                        <strong style="font-size: 1.1em;">₹<%= receiptData.amountDueFormatted %></strong>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Footer -->
        <footer class="footer-section">
            <div class="note">
                <% if (receiptData.notes && receiptData.notes.trim() !== '') { %>
                    <strong>Notes:</strong> <%- receiptData.notes.replace(/\n/g, '<br>') %><br><br>
                <% } %>
                This is the Final Bill. Please keep it for your records.
            </div>
            <div class="signature">SIGNATURE / STAMP</div>
        </footer>
    </div>
    
    <!-- Action Buttons -->
    <div class="action-buttons no-print">
        <button onclick="window.print()" class="print-btn">Print Receipt</button>
        <a href="/receipt-form" class="back-btn">New Receipt Form</a>
        <% if (sessionUser && sessionUser.role === 'ADMIN') { %>
            <a href="/admin-dashboard" class="back-btn" style="background-color: #6c757d;">Dashboard</a>
        <% } else { %>
            <a href="/dashboard" class="back-btn" style="background-color: #6c757d;">Dashboard</a>
        <% } %>
    </div>
</body>
</html>