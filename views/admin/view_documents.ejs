<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View <%= title %></title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin_management.css">
</head>
<body>
    <div class="management-container">
        <header class="management-header">
            <h1>All <%= title %></h1>
            <a href="/admin-dashboard" class="back-link">Back to Dashboard</a>
        </header>

        <section class="section">
            <form method="GET" action="/admin/<%= docType === 'receipt' ? 'receipts' : 'estimates' %>">
                <div class="search-container">
                    <input type="search" name="q" placeholder="Search by Doc ID, Customer Name/ID, User..." value="<%= typeof query !== 'undefined' ? query : '' %>">
                    <button type="submit">Search</button>
                    <a href="/admin/<%= docType === 'receipt' ? 'receipts' : 'estimates' %>" class="action-link" style="text-align: center;">Clear</a>
                </div>
            </form>
        </section>

        <section class="section">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date & Time</th>
                        <th>Customer Name</th>
                        <th>Amount</th>
                        <th>Created By</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(documents && documents.length > 0) { %>
                        <% documents.forEach(doc => { %>
                            <tr>
                                <td><%= doc.display_doc_id %></td>
                                <td><%= doc.display_date %></td>
                                <td><%= doc.customer_name %> (<%= doc.display_customer_id %>)</td>
                                <td><%= doc.display_amount %></td>
                                <td><%= doc.created_by_user %></td>
                                <td><a href="/<%= docType %>/<%= doc.id %>" target="_blank">View</a></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" style="text-align: center;">No <%= title.toLowerCase() %> found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>