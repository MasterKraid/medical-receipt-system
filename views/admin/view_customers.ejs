<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Customers</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin_management.css">
</head>
<body>
    <div class="management-container">
        <header class="management-header">
            <h1>All Customers</h1>
            <a href="/admin-dashboard" class="back-link">Back to Dashboard</a>
        </header>

        <section class="section">
            <form method="GET" action="/admin/customers">
                <div class="search-container">
                    <input type="search" name="q" placeholder="Search by Customer ID, Name, or Mobile..." value="<%= typeof query !== 'undefined' ? query : '' %>">
                    <button type="submit">Search</button>
                    <a href="/admin/customers" class="action-link" style="text-align: center;">Clear</a>
                </div>
            </form>
        </section>

        <section class="section">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Gender</th>
                        <th>DOB / Age</th>
                        <th>Registered On</th>
                        <% if (sessionUser && (sessionUser.role === 'ADMIN' || sessionUser.role === 'HEAD_USER')) { %>
                            <th style="width: 10%;">Actions</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% if(customers && customers.length > 0) { %>
                        <% customers.forEach(cust => { %>
                            <tr>
                                <td><%= cust.display_id %></td>
                                <td><%= cust.name %></td>
                                <td><%= cust.mobile || 'N/A' %></td>
                                <td><%= cust.gender || 'N/A' %></td>
                                <td><%= cust.dob ? new Date(cust.dob).toLocaleDateString('en-GB') : (cust.age ? `${cust.age} yrs` : 'N/A') %></td>
                                <td><%= cust.display_created_at %></td>
                                <% if (sessionUser && (sessionUser.role === 'ADMIN' || sessionUser.role === 'HEAD_USER')) { %>
                                    <td>
                                        <% if (sessionUser.role === 'ADMIN') { %>
                                            <a href="/admin/customers/edit/<%= cust.id %>" class="action-btn edit-btn">Edit</a>
                                        <% } else { %>
                                            <span>No Actions</span>
                                        <% } %>
                                    </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" style="text-align: center;">No customers found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>