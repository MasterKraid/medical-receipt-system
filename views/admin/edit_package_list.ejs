<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit: <%= list.name %></title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin_management.css">
</head>
<body>
    <div class="management-container">
        <header class="management-header">
            <h1>Editing: <%= list.name %></h1>
            <a href="/admin/labs" class="back-link">Back to Labs</a>
        </header>

        <section class="section">
            <h2>Add New Package to this List</h2>
            <form action="/admin/packages/add-to-list" method="POST">
                <input type="hidden" name="package_list_id" value="<%= list.id %>">
                <div class="form-grid" style="grid-template-columns: 2fr 1fr 1fr auto;">
                    <div>
                        <label>Package Name</label>
                        <input type="text" name="name" required>
                    </div>
                    <div>
                        <label>MRP (₹)</label>
                        <input type="number" name="mrp" step="0.01" min="0" required>
                    </div>
                    <div>
                        <label>B2B Price (₹)</label>
                        <input type="number" name="b2b_price" step="0.01" min="0" required>
                    </div>
                    <div style="align-self: end;">
                        <button type="submit" style="margin-top: 0;">Add</button>
                    </div>
                </div>
            </form>
        </section>

        <section class="section">
            <h2>Existing Packages in this List</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Package Name</th>
                        <th style="width: 15%;">MRP (₹)</th>
                        <th style="width: 15%;">B2B Price (₹)</th>
                        <th style="width: 10%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% packages.forEach(pkg => { %>
                        <form action="/admin/packages/update" method="POST">
                            <input type="hidden" name="package_id" value="<%= pkg.id %>">
                            <input type="hidden" name="package_list_id" value="<%= list.id %>">
                            <tr>
                                <td><input type="text" name="name" value="<%= pkg.name %>"></td>
                                <td><input type="number" name="mrp" step="0.01" value="<%= pkg.mrp %>"></td>
                                <td><input type="number" name="b2b_price" step="0.01" value="<%= pkg.b2b_price %>"></td>
                                <td><button type="submit" class="action-btn edit-btn">Save</button></td>
                            </tr>
                        </form>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>