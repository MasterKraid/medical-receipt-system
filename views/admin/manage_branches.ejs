<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Branches</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin_management.css"> <!-- NEW STYLESHEET -->
</head>
<body>
    <div class="management-container">
        <header class="management-header">
            <h1>Manage Branches</h1>
            <a href="/admin-dashboard" class="back-link">Back to Dashboard</a>
        </header>

        <section class="section">
            <h2>Add New Branch</h2>
            <form action="/admin/branches/add" method="POST">
                <div class="form-grid">
                    <div>
                        <label for="name">Branch Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div>
                        <label for="phone">Phone Number(s)</label>
                        <input type="text" id="phone" name="phone" required>
                    </div>
                    <div class="full-width">
                        <label for="address">Address</label>
                        <textarea id="address" name="address" rows="3" required></textarea>
                    </div>
                </div>
                <button type="submit">Add Branch</button>
            </form>
        </section>

        <section class="section">
            <h2>Existing Branches</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th style="width: 100px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% branches.forEach(branch => { %>
                        <tr>
                            <td><%= branch.name %></td>
                            <td style="white-space: pre-wrap;"><%= branch.address %></td>
                            <td><%= branch.phone %></td>
                            <td><button class="action-btn edit-btn" onclick="toggleEdit('<%= branch.id %>')">Edit</button></td>
                        </tr>
                        <tr class="edit-form-row" id="edit-form-<%= branch.id %>" style="display: none;">
                            <td colspan="4" style="background-color: #fdf5e6;">
                                <form action="/admin/branches/edit/<%= branch.id %>" method="POST">
                                    <h4>Editing: <%= branch.name %></h4>
                                    <label>Branch Name</label>
                                    <input type="text" name="name" value="<%= branch.name %>" required>
                                    <label>Address</label>
                                    <textarea name="address" rows="3" required><%= branch.address %></textarea>
                                    <label>Phone</label>
                                    <input type="text" name="phone" value="<%= branch.phone %>" required>
                                    <button type="submit" style="margin-top: 10px;">Save Changes</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </div>
    <script>
        function toggleEdit(branchId) {
            const formRow = document.getElementById(`edit-form-${branchId}`);
            formRow.style.display = formRow.style.display === 'none' ? 'table-row' : 'none';
        }
    </script>
</body>
</html>