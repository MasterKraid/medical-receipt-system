<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Branches</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .dashboard-container { max-width: 900px; }
        .dashboard-header { border-bottom: 1px solid #eee; padding-bottom: 15px; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center; }
        .dashboard-header h1 { margin: 0; text-align: left; }
        .action-link { display: inline-block; padding: 8px 15px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 5px; font-size: 0.9em; }
        .management-section { margin-bottom: 30px; }
        .management-section h2 { font-size: 1.4em; color: #444; margin-bottom: 15px; border-bottom: 1px solid #eee; padding-bottom: 8px; }
        .data-table { width: 100%; border-collapse: collapse; margin-top: 20px; table-layout: fixed; }
        .data-table th, .data-table td { border: 1px solid #ddd; padding: 10px; text-align: left; vertical-align: middle; word-wrap: break-word; }
        .data-table th { background-color: #f4f4f9; font-weight: bold; }
        .edit-btn { background-color: #ffc107; color: #212529; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer; }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Manage Branches</h1>
            <a href="/admin-dashboard" class="action-link">Back to Dashboard</a>
        </div>

        <div class="management-section">
            <h2>Add New Branch</h2>
            <form action="/admin/branches/add" method="POST" style="max-width: none; box-shadow: none; padding: 0;">
                <div class="form-grid">
                    <div>
                        <label for="name">Branch Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                     <div>
                        <label for="phone">Phone Number(s)</label>
                        <input type="text" id="phone" name="phone" required>
                    </div>
                    <div class="full-width">
                        <label for="address">Address</label>
                        <textarea id="address" name="address" rows="3" required></textarea>
                    </div>
                </div>
                <button type="submit">Add Branch</button>
            </form>
        </div>

        <div class="management-section">
            <h2>Existing Branches</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th style="width: 25%;">Name</th>
                        <th style="width: 45%;">Address</th>
                        <th style="width: 20%;">Phone</th>
                        <th style="width: 10%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% branches.forEach(branch => { %>
                        <tr>
                            <td><%= branch.name %></td>
                            <td style="white-space: pre-wrap;"><%= branch.address %></td>
                            <td><%= branch.phone %></td>
                            <td><button class="edit-btn" onclick="toggleEdit('<%= branch.id %>')">Edit</button></td>
                        </tr>
                        <tr class="edit-form-row" id="edit-form-<%= branch.id %>" style="display: none;">
                            <td colspan="4" style="background: #fdfdfd;">
                                <form action="/admin/branches/edit/<%= branch.id %>" method="POST">
                                    <h4>Editing: <%= branch.name %></h4>
                                    <label>Branch Name</label>
                                    <input type="text" name="name" value="<%= branch.name %>" required>
                                    <label>Address</label>
                                    <textarea name="address" rows="3" required><%= branch.address %></textarea>
                                    <label>Phone</label>
                                    <input type="text" name="phone" value="<%= branch.phone %>" required>
                                    <button type="submit" style="margin-top: 10px;">Save Changes</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function toggleEdit(branchId) {
            const formRow = document.getElementById(`edit-form-${branchId}`);
            formRow.style.display = formRow.style.display === 'none' ? 'table-row' : 'none';
        }
    </script>
</body>
</html>