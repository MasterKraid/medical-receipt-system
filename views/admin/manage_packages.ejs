<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Packages</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin_management.css"> <!-- NEW STYLESHEET -->
</head>
<body>
    <div class="management-container">
        <header class="management-header">
            <h1>Manage Packages</h1>
            <a href="/admin-dashboard" class="back-link">Back to Dashboard</a>
        </header>

        <section class="section">
            <h2>Add New Package</h2>
            <form action="/admin/packages/add" method="POST">
                <div class="form-grid">
                    <div>
                        <label for="name">Package Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div>
                        <label for="mrp">MRP (₹)</label>
                        <input type="number" id="mrp" name="mrp" step="0.01" min="0" required>
                    </div>
                </div>
                <button type="submit">Add Package</button>
            </form>
        </section>

        <section class="section">
            <h2>Existing Packages</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Package Name</th>
                        <th style="width: 150px;">MRP (₹)</th>
                        <th style="width: 100px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% packages.forEach(pkg => { %>
                        <tr>
                            <td><%= pkg.name %></td>
                            <td><%= parseFloat(pkg.mrp).toFixed(2) %></td>
                            <td><button class="action-btn edit-btn" onclick="toggleEdit('<%= pkg.id %>')">Edit</button></td>
                        </tr>
                        <tr class="edit-form-row" id="edit-form-<%= pkg.id %>" style="display: none;">
                            <td colspan="3" style="background-color: #fdf5e6;">
                                <form action="/admin/packages/edit/<%= pkg.id %>" method="POST">
                                    <h4>Editing: <%= pkg.name %></h4>
                                    <div class="form-grid">
                                        <div class="full-width">
                                            <label>New Name</label>
                                            <input type="text" name="name" value="<%= pkg.name %>" required>
                                        </div>
                                        <div>
                                            <label>New MRP</label>
                                            <input type="number" name="mrp" value="<%= parseFloat(pkg.mrp).toFixed(2) %>" step="0.01" min="0" required>
                                        </div>
                                    </div>
                                    <button type="submit" style="margin-top: 15px;">Save Changes</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </div>

    <script>
        function toggleEdit(packageId) {
            const formRow = document.getElementById(`edit-form-${packageId}`);
            formRow.style.display = formRow.style.display === 'none' ? 'table-row' : 'none';
        }
    </script>
</body>
</html>