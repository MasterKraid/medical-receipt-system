<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Packages</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .dashboard-container { max-width: 800px; }
        .dashboard-header { border-bottom: 1px solid #eee; padding-bottom: 15px; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center; }
        .dashboard-header h1 { margin: 0; text-align: left; }
        .action-link { display: inline-block; padding: 8px 15px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 5px; font-size: 0.9em; }
        .action-link:hover { background-color: #5a6268; }
        .management-section { margin-bottom: 30px; }
        .management-section h2 { font-size: 1.4em; color: #444; margin-bottom: 15px; border-bottom: 1px solid #eee; padding-bottom: 8px; }
        .data-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        .data-table th, .data-table td { border: 1px solid #ddd; padding: 10px; text-align: left; vertical-align: middle; }
        .data-table th { background-color: #f4f4f9; font-weight: bold; }
        .data-table .form-inline input { width: calc(100% - 20px); }
        .data-table .form-inline button { padding: 8px 12px; }
        .edit-btn { background-color: #ffc107; color: #212529; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer; }
        .edit-btn:hover { background-color: #e0a800; }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Manage Packages</h1>
            <a href="/admin-dashboard" class="action-link">Back to Dashboard</a>
        </div>

        <div class="management-section">
            <h2>Add New Package</h2>
            <form action="/admin/packages/add" method="POST" class="form-grid" style="max-width: none; box-shadow: none; padding: 0;">
                <div>
                    <label for="name">Package Name</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div>
                    <label for="mrp">MRP (₹)</label>
                    <input type="number" id="mrp" name="mrp" step="0.01" min="0" required>
                </div>
                <div class="full-width">
                    <button type="submit">Add Package</button>
                </div>
            </form>
        </div>

        <div class="management-section">
            <h2>Existing Packages</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Package Name</th>
                        <th style="width: 120px;">MRP (₹)</th>
                        <th style="width: 80px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% packages.forEach(pkg => { %>
                        <tr>
                            <td data-label="Name"><%= pkg.name %></td>
                            <td data-label="MRP"><%= parseFloat(pkg.mrp).toFixed(2) %></td>
                            <td><button class="edit-btn" onclick="toggleEdit(this, '<%= pkg.id %>')">Edit</button></td>
                        </tr>
                        <tr class="edit-form-row" id="edit-form-<%= pkg.id %>" style="display: none;">
                            <td colspan="3" style="background: #fdfdfd;">
                                <form action="/admin/packages/edit/<%= pkg.id %>" method="POST" class="form-inline form-grid">
                                    <div>
                                        <label>New Name</label>
                                        <input type="text" name="name" value="<%= pkg.name %>" required>
                                    </div>
                                     <div>
                                        <label>New MRP</label>
                                        <input type="number" name="mrp" value="<%= parseFloat(pkg.mrp).toFixed(2) %>" step="0.01" min="0" required>
                                    </div>
                                    <div class="full-width">
                                        <button type="submit">Save</button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function toggleEdit(button, packageId) {
            const formRow = document.getElementById(`edit-form-${packageId}`);
            const isVisible = formRow.style.display === 'table-row';
            formRow.style.display = isVisible ? 'none' : 'table-row';
            button.textContent = isVisible ? 'Edit' : 'Cancel';
        }
    </script>
</body>
</html>