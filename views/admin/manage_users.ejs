<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin_management.css">
</head>
<body>
    <div class="management-container">
        <header class="management-header">
            <h1>Manage Users</h1>
            <a href="/admin-dashboard" class="back-link">Back to Dashboard</a>
        </header>

        <section class="section">
            <form method="GET" action="/admin/users">
                <div class="search-container">
                    <input type="search" name="q" placeholder="Search by Username or Role..." value="<%= typeof query !== 'undefined' ? query : '' %>">
                    <button type="submit">Search</button>
                    <a href="/admin/users" class="action-link" style="text-align: center;">Clear</a>
                </div>
            </form>
        </section>

        <!-- Add New User Form -->
        <section class="section">
            <h2>Add New User</h2>
            <form action="/admin/users/add" method="POST">
                <div class="form-grid" style="grid-template-columns: repeat(2, 1fr); gap: 15px 25px;">
                    <div>
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" required autocomplete="off">
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <div>
                        <label for="branch_id">Branch</label>
                        <select id="branch_id" name="branch_id" required>
                            <option value="" disabled selected>-- Select a Branch --</option>
                            <% branches.forEach(branch => { %>
                                <option value="<%= branch.id %>"><%= branch.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="role">User Role</label>
                        <select id="role" name="role" required>
                            <option value="GENERAL_EMPLOYEE" selected>General Employee</option>
                            <option value="CLIENT">Client</option>
                            <option value="HEAD_USER">Head User</option>
                            <option value="ADMIN">Admin</option>
                        </select>
                    </div>
                    <div class="full-width">
                        <label>Rate Database Access</label>
                        <div class="checkbox-list" style="max-height: 150px; overflow-y: auto; border: 1px solid #ccc; padding: 10px; border-radius: 5px; display: grid; grid-template-columns: repeat(3, 1fr);">
                           <% if (packageLists.length > 0) { %>
                               <% packageLists.forEach(list => { %>
                                   <div>
                                       <input type="checkbox" name="package_list_ids" value="<%= list.id %>" id="add_list_<%= list.id %>">
                                        <label for="add_list_<%= list.id %>" style="display: inline; font-weight: normal;"><%= list.name %></label>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p>No rate databases found.</p>
                            <% } %>
                        </div>
                        <small>Select which rate lists this user can access. Admins get access to all lists automatically.</small>
                    </div>
                </div>
                <button type="submit">Create User</button>
            </form>
        </section>

        <!-- Existing Users Table -->
        <section class="section">
            <h2>Existing Users</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Branch</th>
                        <th>Role</th>
                        <th>Rate Database</th>
                        <th style="width: 100px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                   <% users.forEach(user => { %>
                       <tr>
                           <td><%= user.username %></td>
                           <td><%= user.branch_name %></td>
                           <td><%= user.role %></td>
                           <td><%= user.assigned_lists || 'Default / None' %></td>
                           <td>
                               <a href="/admin/users/edit/<%= user.id %>" class="action-btn edit-btn">Edit</a>
                               <% if(sessionUser.id !== user.id) { %>
                                   <form class="delete-form" action="/admin/users/delete/<%= user.id %>" method="POST" onsubmit="return confirm('Are you sure you want to permanently delete this user? This cannot be undone.');">
                                        <button type="submit" class="action-btn delete-btn">Delete</    button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>
