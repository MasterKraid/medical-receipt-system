<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .dashboard-container { max-width: 900px; }
        .dashboard-header { border-bottom: 1px solid #eee; padding-bottom: 15px; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center; }
        .dashboard-header h1 { margin: 0; text-align: left; }
        .action-link { display: inline-block; padding: 8px 15px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 5px; font-size: 0.9em; }
        .management-section { margin-bottom: 30px; }
        .management-section h2 { font-size: 1.4em; color: #444; margin-bottom: 15px; border-bottom: 1px solid #eee; padding-bottom: 8px; }
        .data-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        .data-table th, .data-table td { border: 1px solid #ddd; padding: 10px; text-align: left; vertical-align: middle; }
        .data-table th { background-color: #f4f4f9; font-weight: bold; }
        .admin-check { display: inline-block; margin-left: 5px; vertical-align: middle; }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Manage Users</h1>
            <a href="/admin-dashboard" class="action-link">Back to Dashboard</a>
        </div>

        <div class="management-section">
            <h2>Add New User</h2>
            <form action="/admin/users/add" method="POST" style="max-width: none; box-shadow: none; padding: 0;">
                <div class="form-grid">
                    <div>
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" required autocomplete="off">
                    </div>
                     <div>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <div>
                        <label for="branch_id">Branch</label>
                        <select id="branch_id" name="branch_id" required>
                            <option value="" disabled selected>-- Select a Branch --</option>
                            <% branches.forEach(branch => { %>
                                <option value="<%= branch.id %>"><%= branch.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="is_admin">Role</label>
                        <input type="checkbox" id="is_admin" name="is_admin" class="admin-check">
                        <label for="is_admin" style="display: inline; font-weight: normal;">Is Administrator</label>
                    </div>
                </div>
                <button type="submit">Create User</button>
            </form>
        </div>

        <div class="management-section">
            <h2>Existing Users</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Branch</th>
                        <th>Role</th>
                        <!-- <th>Action</th> -->
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.branch_name %></td>
                            <td><%= user.is_admin ? 'Admin' : 'User' %></td>
                            <!-- <td><button disabled>Edit</button></td> -->
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>