<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin_management.css"> <!-- NEW STYLESHEET -->
</head>
<body>
    <div class="management-container">
        <header class="management-header">
            <h1>Manage Users</h1>
            <a href="/admin-dashboard" class="back-link">Back to Dashboard</a>
        </header>

        <section class="section">
            <h2>Add New User</h2>
            <form action="/admin/users/add" method="POST">
                <div class="form-grid">
                    <div>
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" required autocomplete="off">
                    </div>
                     <div>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <div>
                        <label for="branch_id">Branch</label>
                        <select id="branch_id" name="branch_id" required>
                            <option value="" disabled selected>-- Select a Branch --</option>
                            <% branches.forEach(branch => { %>
                                <option value="<%= branch.id %>"><%= branch.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label style="margin-bottom: 12px;">Role</label>
                        <input type="checkbox" id="is_admin" name="is_admin" style="vertical-align: middle;">
                        <label for="is_admin" style="display: inline; font-weight: normal; margin-top: 0;">Is Administrator</label>
                    </div>
                </div>
                <button type="submit">Create User</button>
            </form>
        </section>

        <section class="section">
            <h2>Existing Users</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Branch</th>
                        <th>Role</th>
                        <th style="width: 100px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.branch_name %></td>
                            <td><%= user.is_admin ? 'Admin' : 'User' %></td>
                            <td>
                                <!-- Prevent admin from deleting themselves -->
                                <% if(sessionUser.id !== user.id) { %>
                                    <form class="delete-form" action="/admin/users/delete/<%= user.id %>" method="POST" onsubmit="return confirm('Are you sure you want to permanently delete this user? This cannot be undone.');">
                                        <button type="submit" class="action-btn delete-btn">Delete</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </div>
</body>
</html>