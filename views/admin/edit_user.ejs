<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit User: <%= user.username %></title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin_management.css">
</head>
<body>
    <div class="management-container">
        <header class="management-header">
            <h1>Edit User: <%= user.username %></h1>
            <a href="/admin/users" class="back-link">Back to Users</a>
        </header>

        <form action="/admin/users/edit/<%= user.id %>" method="POST">
            <section class="section">
                <h2>User Details</h2>
                <div class="form-grid" style="grid-template-columns: 1fr 1fr;">
                    <div>
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" value="<%= user.username %>" required>
                    </div>
                    <div>
                        <label for="password">New Password</label>
                        <input type="password" id="password" name="password" placeholder="Leave blank to keep unchanged">
                    </div>
                    <div>
                        <label for="branch_id">Branch</label>
                        <select id="branch_id" name="branch_id" required>
                            <% branches.forEach(branch => { %>
                                <option value="<%= branch.id %>" <%= user.branch_id === branch.id ? 'selected' : '' %>><%= branch.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="role">Role</label>
                        <select id="role" name="role" required>
                            <option value="GENERAL_EMPLOYEE" <%= user.role === 'GENERAL_EMPLOYEE' ? 'selected' : '' %>>General Employee</option>
                            <option value="CLIENT" <%= user.role === 'CLIENT' ? 'selected' : '' %>>Client</option>
                            <option value="HEAD_USER" <%= user.role === 'HEAD_USER' ? 'selected' : '' %>>Head User</option>
                            <option value="ADMIN" <%= user.role === 'ADMIN' ? 'selected' : '' %>>Admin</option>
                        </select>
                    </div>
                </div>
            </section>

            <section class="section">
                <h2>Rate Database Access</h2>
                <p>Select which rate databases (package lists) this user is allowed to access. Admins have access to all lists automatically.</p>
                <div class="form-grid" style="grid-template-columns: repeat(3, 1fr);">
                    <% packageLists.forEach(list => { %>
                        <div>
                            <input type="checkbox" name="package_list_ids" value="<%= list.id %>" id="list_<%= list.id %>"
                                <%= userAccessIds.has(list.id) ? 'checked' : '' %>>
                            <label for="list_<%= list.id %>" style="display: inline; font-weight: normal;"><%= list.name %></label>
                        </div>
                    <% }) %>
                </div>
            </section>

            <button type="submit">Save Changes</button>
        </form>
    </div>
</body>
</html>
