<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <div class="header-top">
                <h1>User Dashboard</h1>
                <% if (sessionUser) { %>
                    <div class="user-badge">
                        <div class="user-name">
                            <% if (sessionUser.role === 'CLIENT') { %>
                                <i class="fa-solid fa-user-tag"></i>
                            <% } else { %>
                                <i class="fa-solid fa-user"></i>
                            <% } %>
                            <%= sessionUser.username %>
                        </div>
                        <% if (currentBranchDetails) { %>
                            <div class="branch-info"><i class="fa-solid fa-building"></i> <%= currentBranchDetails.name %></div>
                        <% } %>
                        <% if (sessionUser.role === 'CLIENT' && typeof walletBalance !== 'undefined') { %>
                            <div class="wallet-balance <%= walletBalance < 0 ? 'negative' : '' %>">
                                <i class="fa-solid fa-wallet"></i> â‚¹<%= walletBalance.toFixed(2) %>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
        <nav class="dashboard-nav">
            <h2>Actions</h2>
            <ul>
                <li><a href="/receipt-form"><i class="fa-solid fa-receipt"></i> Create New Receipt</a></li>
                <li><a href="/estimate-form"><i class="fa-solid fa-file-invoice"></i> Create New Estimate</a></li>
                <li><a href="/customers"><i class="fa-solid fa-users"></i> View Customers</a></li>
            </ul>
        </nav>
        <div class="logout-section">
            <a href="/logout" class="logout-link"><i class="fa-solid fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>
</body>
</html>